{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "isolatedModules": false,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "allowUnreachableCode": false,
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "files": [
    "public-typescript/main.ts",
    "public-typescript/dashboard.ts",
    "public-typescript/assets.ts",
    "public-typescript/data.ts"
  ],
  "include": ["public-typescript/*"],
  "exclude": ["data/*", "database/*", "helpers/*", "parsers/*"],
  "compileOnSave": true,
  "buildOnSave": true
}
